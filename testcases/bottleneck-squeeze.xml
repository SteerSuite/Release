<SteerBenchTestCase xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                        TestCaseSchema.xsd">

  <header>
    <version>1.0</version>
    <name>bottleneck-squeeze</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>44</x> <y>30</y> <z>0</z> </position>
    <lookat> <x>27</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <obstacle>
    <xmin>-11</xmin>
    <xmax>20</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>2.1</zmin>
    <zmax>100</zmax>
  </obstacle>

  <obstacle>
    <xmin>-11</xmin>
    <xmax>20</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-100</zmin>
    <zmax>-2.1</zmax>
  </obstacle>

  <agentRegion>
    <numAgents>1000</numAgents>
    <regionBounds>
      <xmin>23</xmin>
      <xmax>90</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-40</zmin>
      <zmax>40</zmax>
    </regionBounds>
    <initialConditions>
      <direction> <random>true</random> </direction>
      <radius>0.5</radius>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>-90</x> <y>0</y> <z>0</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agentRegion>

</SteerBenchTestCase>
